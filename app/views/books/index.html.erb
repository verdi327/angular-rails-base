<div ng-app="AngulaRails"
 ng-controller="BooksController"
 ng-init="urls=<%= @urls.to_json %>;books=<%=@books_json.to_json%>">
  <div class="row">
    <div class="col-md-6">
      <h1>Books</h1>
      <ul>
        <li ng-repeat="book in books">
          {{ book.title }} by {{ book.author }}
        </li>
      </ul>
    </div>
  </div>
</div>